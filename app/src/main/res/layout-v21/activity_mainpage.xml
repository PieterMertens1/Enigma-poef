<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.enigma.pieter.enigmapoef.Mainpage">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <Button
        android:id="@+id/toevoegenButton"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorAccent"
        android:onClick="poefToevoegen"
        android:text="Poef Toevoegen"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/bekijkenButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bekijkenButton"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginTop="56dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:onClick="poefBekijken"
        android:text="Poef Bekijken"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <Button
        android:id="@+id/betalenButton"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/darker_gray"
        android:onClick="poefBetalen"
        android:text="Poef betalen"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bekijkenButton"
        app:layout_constraintVertical_bias="0.186" />

</android.support.constraint.ConstraintLayout>
